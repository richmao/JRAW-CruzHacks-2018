doctype html
html(ng-app='myApp', ng-controller='myCtrl')
  head
    title Need2Go
    link(rel='stylesheet', href='stylesheets/style.css')
    // <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js')
    script(type='text/javascript', src='javascripts/PinUser.js')
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyC5YZHiXCCPhqSuJfBMQcyhvtcOvJE6qGQ&callback=initMap', async='', defer='')
  body
    h1
      | Need2Go
      h1
        center
          #map  
        script.
          function initMap();
        center
          #infoBox
            ul
              li Location ID: {{loc_id}}
              li Name: {{name}}
              li Rating: {{rating}}
              li Notes: {{notes}}
          script.
            var text = '{ "toilet_lat":"33.44", "toilet_lon":"-134", "name":"Uluru"}';
            var obj = JSON.parse(text);
            var newPos = new google.maps.LatLng(obj.toilet_lat, obj.toilet_lon);
            dropNewMarker(newPos);
        button#reviewButton(type='button') Submit a Review!
        button#pinButton(type='button') Drop a Pin!
        button#randButton(type='button') Drop a Pin at a random location!
        script.
          document.getElementById("pinButton").addEventListener("click", initMap);
        script.
          document.getElementById("randButton").addEventListener("click", dropRandMarker)
        h2
          | Hellos
          h2
            #hello.List
              p Here is a list of the various hellos
              ul
                li Hola
                li Bonjour
                li Konnichiwa
              div
                #world
                  p World
